<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.niha.stcapp.StudentTransportActivity"
    android:background="@drawable/trans_login_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="50sp"
        android:padding="30sp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/snu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:background="@drawable/unnamed"
        android:layout_marginBottom="75dp"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.5sp">

        <EditText
            android:id="@+id/netID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:hint="SNU Net ID"
            android:padding="12sp"
            android:textColor="@color/hintColor"
            android:textColorHint="@drawable/on_focus_view"
            android:textCursorDrawable="@drawable/cursor_colour"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.5sp">

        <EditText
            android:id="@+id/password"
            android:background="@drawable/rounded_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12sp"
            android:textColor="@color/hintColor"
            android:textColorHint="@drawable/on_focus_view"
            android:textCursorDrawable="@drawable/cursor_colour"
            android:textSize="20sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn_style"
        android:text="Login"
        android:textSize="20sp"/>

    </LinearLayout>

</ScrollView>
